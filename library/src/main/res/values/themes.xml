<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Spy" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/spy_res_white</item>
        <item name="colorPrimaryVariant">@color/spy_res_white</item>
        <item name="colorOnPrimary">@color/spy_res_black</item>
        <item name="colorSecondary">@color/spy_res_white</item>
        <item name="colorSecondaryVariant">@color/spy_res_white</item>
        <item name="colorOnSecondary">@color/spy_res_black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Spy.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Spy.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SpyResTextButton">
        <item name="android:background">@drawable/spy_res_shape_button</item>
        <item name="android:textColor">@color/spy_res_white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
    </style>
</resources>