<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/spy_res_bottom_sheet_background">

    <TextView
        android:id="@+id/tv_delete_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/do_you_really_want_to_delete_all_events"
        android:textSize="30sp"
        android:textColor="@color/cardview_dark_background"
        android:paddingHorizontal="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.3"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/b_agree_delete_dialog"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="@string/agree"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginVertical="20dp"
        android:background="@color/spy_res_light_green_100"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintTop_toBottomOf="@id/tv_delete_dialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintEnd_toStartOf="@id/b_disagree_delete_dialog"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/b_disagree_delete_dialog"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="@string/disagree"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginVertical="20dp"
        android:background="@color/spy_res_light_green_100"
        app:layout_constraintStart_toEndOf="@id/b_agree_delete_dialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_delete_dialog"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>