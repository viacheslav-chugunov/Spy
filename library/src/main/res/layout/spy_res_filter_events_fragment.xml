<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/spy_res_bottom_sheet_background">

    <TextView
        android:id="@+id/tv_filter_events"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/filter_events_by"
        android:textSize="30sp"
        android:textColor="@color/cardview_dark_background"
        android:paddingHorizontal="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.2"/>

    <CheckBox
        android:id="@+id/cb_success"
        android:checked="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_filter_events"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintBottom_toTopOf="@id/cb_info"/>

    <CheckBox
        android:id="@+id/cb_info"
        android:checked="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cb_success"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintBottom_toTopOf="@id/cb_warning"/>

    <CheckBox
        android:id="@+id/cb_warning"
        android:checked="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cb_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintBottom_toTopOf="@id/cb_error"/>

    <CheckBox
        android:id="@+id/cb_error"
        android:checked="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cb_warning"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="end"
        app:constraint_referenced_ids="cb_error, cb_info, cb_success, cb_warning"/>

    <Space
        android:id="@+id/space"
        android:layout_width="20dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/barrier"/>

    <TextView
        android:id="@+id/tv_success_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/success_events"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/space"
        app:layout_constraintTop_toBottomOf="@id/tv_filter_events"
        app:layout_constraintBottom_toTopOf="@id/tv_info_sort"
        android:textColor="@color/cardview_dark_background"/>

    <TextView
        android:id="@+id/tv_info_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/info_events"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/space"
        app:layout_constraintTop_toBottomOf="@id/tv_success_sort"
        app:layout_constraintBottom_toTopOf="@id/tv_warning_sort"
        android:textColor="@color/cardview_dark_background"/>

    <TextView
        android:id="@+id/tv_warning_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/warning_events"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/space"
        app:layout_constraintTop_toBottomOf="@id/tv_info_sort"
        app:layout_constraintBottom_toTopOf="@id/tv_error_sort"
        android:textColor="@color/cardview_dark_background"/>

    <TextView
        android:id="@+id/tv_error_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/error_events"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/space"
        app:layout_constraintTop_toBottomOf="@id/tv_warning_sort"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/cardview_dark_background"/>

</androidx.constraintlayout.widget.ConstraintLayout>